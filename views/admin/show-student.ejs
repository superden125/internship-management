<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/meta') %>
</head>

<body>
  <%- include('../layouts/admin-sidebar') %>

    <div id="content">
      <%- include('../layouts/navbar') %>

        <div class="row mb-3">
          <div class="col-auto ml-auto">
            <a href="/admin/manage/students/add_student" class="btn btn-info" type="button">
              Thêm mới
              <i class="far fa-plus-square ml-2"></i>
            </a>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th class="text-left align-middle">#</th>
                <th class="text-left align-middle">Mã số sinh viên</th>
                <th class="text-left align-middle">Họ tên</th>
                <th class="text-left align-middle">Mã Lớp</th>
                <th class="text-left align-middle">Mã Ngành</th>
                <th class="text-left align-middle">Email</th>
                <th class="text-left align-middle"></th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i < students.length; i++) { %>
                <tr>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= i + 1 %>
                  </td>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= students[i].ms %>
                  </td>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= students[i].name %>
                  </td>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= students[i].idClass %>
                  </td>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= students[i].major.name %>
                  </td>
                  <td class="text-left align-middle"
                    onclick="window.location.href='/admin/manage/students/<%= students[i]._id%>';">
                    <%= students[i].email %>
                  </td>

                  <td class="text-left align-middle">
                    <a class="btn border-shadow delete" data-id="<%=students[i]._id%>" data-toggle="tooltip"
                      data-placement="top" title="Xóa">
                      <i class="far fa-trash-alt text-body"></i>
                    </a>
                  </td>
                </tr>



                <% } %>
            </tbody>
          </table>
        </div>
    </div>

    <%- include('../layouts/script') %>
      <script src="/js/admin/show-student.js"></script>
</body>

</html>